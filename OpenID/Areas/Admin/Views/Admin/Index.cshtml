@{
}
@{
    //ViewBag.Title = AdminConfiguration.PageTitle;
    Layout = "_Layout";
}

<div style="margin: 50px;">
</div>

<!-- Cards -->
<div class="card-deck d-flex flex-row justify-content-center flex-shrink-0  mb-3 text-center" style="gap: 20px">
    <!-- Clients -->
    <div class="card mb-4 w-25 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Clients</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-monitor" title="Clients" aria-hidden="true"></span>
            </h1>
            <a asp-area="" asp-controller="Configuration" asp-action="Clients" class="btn btn-lg btn-block btn-outline-primary">Manage</a>
        </div>
    </div>
    <!-- Identity Resources -->
    <div class="card mb-4 w-25 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Identity Clients</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-tags" title="Identity Resources" aria-hidden="true"></span>
            </h1>
            <a asp-area="" asp-controller="Configuration" asp-action="IdentityResources" class="btn btn-lg btn-block btn-outline-primary">Manage</a>
        </div>
    </div>
    <!-- Api Resources -->
    <div class="card mb-4 w-25 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">ApiResources</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-cloud" title="Api Resources" aria-hidden="true"></span>
            </h1>
            <a asp-area="" asp-controller="Configuration" asp-action="ApiResources" class="btn btn-lg btn-block btn-outline-primary">Manage</a>
        </div>
    </div>

    <!-- Api Scopes -->
    <div class="card mb-4 w-25 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">ApiScopes</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-wrench" title="Api Scopes" aria-hidden="true"></span>
            </h1>
            <a asp-area="" asp-controller="Configuration" asp-action="ApiScopes" class="btn btn-lg btn-block btn-outline-primary">Manage</a>
        </div>
    </div>
</div>


<div class="card-deck d-flex flex-row justify-content-center mb-3 text-center" style="gap:20px; flex:1;">
    <!-- Persisted Grants -->
    <div class="card mb-4 w-25 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">PersistedGrants</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-key" title="Persisted Grants" aria-hidden="true"></span>
            </h1>
            <a asp-area="" asp-controller="Grant" asp-action="PersistedGrants" class="btn btn-lg btn-block btn-outline-primary">Manage</a>
        </div>
    </div>
    <!-- Users -->
    <div class="card mb-4 w-25 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Users</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-person" title="Users" aria-hidden="true"></span>
            </h1>
            <a asp-area="" asp-controller="Identity" asp-action="Users" class="btn btn-lg btn-block btn-outline-primary">Manage</a>
        </div>
    </div>
    <!-- Roles -->
    <div class="card mb-4 w-25 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">Roles</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-lock-locked" title="Roles" aria-hidden="true"></span>
            </h1>
            <a asp-area="" asp-controller="Identity" asp-action="Roles" class="btn btn-lg btn-block btn-outline-primary">Manage</a>
        </div>
    </div>

    <!-- Audit Logging -->
    <div class="card mb-4 w-25 box-shadow">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">AuditLogs</h4>
        </div>
        <div class="card-body">
            <h1 class="card-title">
                <span class="oi oi-eye" title="Audit Logging" aria-hidden="true"></span>
            </h1>
            <a asp-area="" asp-controller="Log" asp-action="AuditLog" class="btn btn-lg btn-block btn-outline-primary">Manage</a>
        </div>
    </div>
</div>
